node('jdk11-mvn3.8.4') {
    properties {
        ([pipelineTriggers([upstream('testfile'), cron('30 */2 * * 0,6')])])
    }
    parameters {
        ([choice(choices: ['petscriped', 'petdeclarative', 'master'], description: 'this is for build to run', name: 'BRANCH_TO_BUILD')])
    }
    stage('git') {
        git : 'main', url: 'https://github.com/nagaraju0/spring-petclinic.git',branch:"${BRANCH_TO_BUILD}"
    }
    stage('build') {
        sh '''
             echo "PATH=${PATH}"
             echo "M2_HOME=${M2_HOME}"
        '''
        sh '/usr/local/apache-maven-3.8.4/bin/mvn clean package'     
    }
    stage('archive') {
        archiveArtifacts artifacts: 'target/*.jar', followSymlinks: false
    }
    stage('publish test reports') {
        junit '**/TEST-*.xml'
    }
}