node('jdk11-mvn3.8.4') {
    try{
        properties([parameters([choice(choices: ['petscriped', 'petdeclarative', 'master'], description: 'this is for build to run', name: 'BRANCH_TO_BUILD')])])
        stage('git') {
            git branch: 'main', url: 'https://github.com/nagaraju0/spring-petclinic.git'
        }
        stage('build') {
            sh '''
                echo "PATH=${PATH}"
                echo "M2_HOME=${M2_HOME}"
            '''
            sh '/usr/local/apache-maven-3.8.4/bin/mvn clean package'     
        }
        stage('archive') {
            archiveArtifacts artifacts: 'target/*.jar', followSymlinks: false
        }
        stage('publish test reports') {
            junit '**/TEST-*.xml'
        }
        currentbuild.result='SUCESS'
    }
    catch (err) {
        currentbuild.result='FAILURE'
    }
    finally {
        mail to :'nagarajucivil011@gmail.com',
        subject:"status of pipeline:${currentbuild.fulldisplayname}",
        body:"${env.BUILD_URL} has result ${currentbuild.result}"
    }
}